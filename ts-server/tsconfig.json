{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["ESNext.String"],
		"module": "commonjs",
		"sourceMap": true,
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		/* Additional Checks */
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts*", "test/**/*.ts"],
	"exclude": ["node_modules", "build", "old"]
}
