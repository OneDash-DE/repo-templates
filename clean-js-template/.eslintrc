{
	"env": {
		"es6": true,
		"node": true
	},
	"plugins": ["html"],
	"extends": ["plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"rules": {
		"linebreak-style": "off",
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"quotes": ["error", "double", { "avoidEscape": true }],
		"semi": ["error", "always"],
		"no-console": "error"
	}
}
